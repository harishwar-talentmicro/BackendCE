<body ng-app="ezeidApp">
    <div id="wrapper" ng-controller="DocumentController as DocCtrl">
        <header-section></header-section>
        <div class="container" style="padding-top:80px;">
            <div class="row">
                <div class="col-md-8" style="margin: auto; float: none;">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>Personal Documents</h4>
                        </div>
                        <div class="panel-body">
                            <div class="col-lg-4">
                                        <ul class="nav nav-pills nav-stacked">
                                            <li role="presentation" ng-class="{ 'active' : OptionSelected===1}" ng-click="OnOptionSelected(1)"><a href="" >ID Card</a></li>
                                            <li role="presentation" ng-class="{ 'active' : OptionSelected===2}"><a href="" ng-click="OnOptionSelected(2)">Passport</a></li>
                                            <li role="presentation" ng-class="{ 'active' : OptionSelected===3}"><a href="" ng-click="OnOptionSelected(3)">Drivers License</a></li>
                                            <li role="presentation" ng-class="{ 'active' : OptionSelected===4}" ng-click="OnOptionSelected(4)"><a href="">Other Document #1</a></li>
                                            <li role="presentation" ng-class="{ 'active' : OptionSelected===5}" ng-click="OnOptionSelected(5)"><a href="">Other Document #2</a></li>
                                        </ul>
                                        <form class="navbar-form navbar-left form-inline" role="search">
                                            <div class="form-group">
                                                <input type="text" class="form-control" data-ng-model="Pin" style="width: 50px;" placeholder="PIN" maxlength="3">
                                            </div>
                                            <button type="submit"  ng-click="DocCtrl.ChangePin()" class="btn btn-primary">Change PIN</button>
                                        </form>
                            </div>
                            <div class="col-lg-8">
                                <div class="well well-lg">
                                <div class="col-lg-8" style="margin: auto; float: none;">

                                        <form>
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="idnumber" data-ng-model="form.RefNo" placeholder="Enter ID number">
                                            </div>
                                            <div class="form-group">
                                                <input type="date" class="form-control" id="expirydate" placeholder="Expiry date" data-ng-model="form.RefExpiryDate">
                                            </div>

                                            <div class="form-group" >
                                                <!--<label>Attach your document</label>-->
                                                <input type="file" class="form-control emptyBox" data-ng-model="fileSelected"
                                                       onchange="angular.element(this).scope().uploadFile(this.files)"/>
                                                <span class="pull-right"
                                                     style="margin-top:8px;"
                                                    ng-show="form.Doc!= 'null'">
                                                    <a class="blue" target="_blank" href="/ewTgetDocument?TokenNo={{Token}}&&RefType={{OptionSelected}}">
                                                        Download Document
                                                    </a>
                                                    <!--<a target="_self" href="{{form.RefDoc}}" download="{{form.RefDoc}}">{{form.RefFileName}}</a>-->
                                                </span><br/>
                                                <br/>
                                            </div>

                                            <!--<div class="form-group">-->

                                                <!--<input type="file" id="idfile">-->
                                                <!--<p class="help-block"></p>-->
                                            <!--</div>-->
                                            <p></p>
                                            <p></p>
                                            <button type="submit" class="btn btn-primary" ng-click="OnSaveDocument()">Save</button>
                                            <button type="submit" class="btn btn-primary">Close</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
